<!-- Stars section -->
        <section class="row justify-content-center">
            <div class="col-6 mt-5 p-3">
                <img src="/images/fivestar.svg">
            </div>
        </section>
<!-- User Dashboard -->
<section>
  <!-- Section for your user information -->
  <div class="row justify-content-center mt-4">
    <div class="col-12 col-md-10 user-info">
      <h3 class="text-center">{{username}}'s Dashboard</h3>
    </div>
  </div>
</section>

<section>
  <!-- Section for forum (casual/competitive) -->
  <div class="row justify-content-center mt-2">
    <div class="col-12">
    <ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active bg-dark" id="user-posts-casual" data-bs-toggle="tab"
          data-bs-target="#user-casual" type="button" role="tab" aria-controls="user-casual" aria-selected="true">Your
          Casual Posts</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link bg-dark" id="user-posts-comp" data-bs-toggle="tab" data-bs-target="#user-comp"
          type="button" role="tab" aria-controls="user-comp" aria-selected="false">Your Competitive Posts</button>
      </li>
    </ul>
    </div>
    
    <!--User Casual Post tab -->
    <div class="tab-content" id="myTabContent">
      <div class="row justify-content-center tab-pane fade show active dashboard-tab p-3" id="user-casual"
        role="tabpanel" aria-labelledby="user-casual">
        <div class="col-12">
        <!--Form for creating new post-->
        <form class="new-post-form">
          <div class="mb-3">
            <label for="casual-post-title" class="form-label">Post Title</label>
            <input type="text" class="form-control" id="casual-post-title">
          </div>
          <div class="mb-3">
            <label for="casual-post-content" class="form-label">Post Content</label>
            <textarea class="form-control" id="casual-post-content" rows="3"></textarea>
          </div>
          <button type="submit" class="btn btn-secondary">Create Post</button>
        </form>
        </div>

        <!-- Display created posts -->
        <section class="col-12">
          <h2>Your Casual Posts</h2>
          <ol>
            {{#each posts as |post|}}
            <li>
              {{> post-info post}}
              <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
            </li>
            {{/each}}
          </ol>
        </section>
      </div>

      <!--User Competitive post tab-->
      <div class=" row justify-content-center tab-pane fade dashboard-tab p-3" id="user-comp" role="tabpanel" aria-labelledby="user-comp">

        <!-- Form for creating new post -->
        <div class="col-12">
        <form class="new-post-form">
          <div class="mb-3">
            <label for="comp-post-title" class="form-label">Post Title</label>
            <input type="text" class="form-control" id="comp-post-title">
          </div>
          <div class="mb-3">
            <label for="comp-post-content" class="form-label">Post Content</label>
            <textarea class="form-control" id="comp-post-content" rows="3"></textarea>
          </div>
          <button type="submit" class="btn btn-secondary">Create Post</button>
        </form>
        </div>

        <!-- Display created posts -->
        <section class="col-12">
          <h2>Your Competitive Posts</h2>
          <ol>
            {{#each comp-posts as |comp-post|}}
            <li>
              {{> post-info comp-post}}
              <a href="/dashboard/edit/{{comp-post.id}}" class="edit-link">Edit post</a>
            </li>
            {{/each}}
          </ol>
        </section>
      </div>
    </div>
  </div>
</section>

<script src="/javascript/add-post.js"></script>
