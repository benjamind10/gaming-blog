<!-- Login/Signup -->
<section class="row justify-content-center p-4 rounded mt-3 formContainer">
  <div class="col-12 col-md-6 p-4 signupDiv">
    <h5 class="text-center pb-2">Signup and find your squad today!</h5>
    <form class="signupForm">
      <div class="mb-2">
        <label for="username" class="form-label">Username:</label>
        <input type="text" class="form-control form-control-sm" id="username-signup" placeholder="Username">
      </div>
      <div class="mb-2">
        <label for="email" class="form-label">Email:</label>
        <input type="email" class="form-control form-control-sm" id="email-signup" placeholder="user@email.com">
      </div>
      <div class="mb-2">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control form-control-sm" id="password-signup" placeholder="Password">
      </div>
      <div>
        <button type="submit" class="btn btn-dark">Signup</button>
      </div>
    </form>
  </div>
  <div class="col-12 col-md-6 p-4 loginDiv">
    <h5 class="text-center pb-2">Sign in to join your squad!</h5>
    <form class="sign-inForm pt-3">
      <div class="mb-2 mb-md-4">
        <label for="email" class="form-label">Email:</label>
        <input type="email" class="form-control form-control-sm" id="email-login" placeholder="user@email.com">
      </div>
      <div class="mb-2 mb-md-5">
        <label for="password" class="form-label">Password:</label>
        <input type="password" class="form-control form-control-sm" id="password-login" placeholder="Password">
      </div>
      <div>
        <button type="submit" class="btn btn-dark">Login</button>
      </div>
    </form>
  </div>
</section>

