<!-- Stars section -->
<section class="row justify-content-center">
  <div class="col-6 mt-5 p-3">
    <img src="./images/fivestar.svg">
  </div>
</section>
<!-- Homepage -->
<section class="row justify-content-center">
  <div class="chatroom col-12 p-3 m-2">
    <div class="py-2 px-5 chatbox">
      This is the chatrooom
      {{> chat}}
    </div>
  </div>
  <div class="col-12">
    <section class="row justify-content-center">
      {{#each releases.[0].results as |release|}}
      <div class="news-card">
        {{log release}}
        {{> game-releases release}}
      </div>
      {{/each}}
    </section>
  </div>
</section>