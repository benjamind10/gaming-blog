<article class='post'>
  <div class='title'>
    <h4>{{title}}</h4>
    <p class="text-light">{{post_url}}</p>

  </div>
  <div class='meta'>
    {{vote_count}}
    {{format_plural 'point' vote_count}}
    by
    {{user.username}}
    on
    {{format_date created_at}}
    |
    <a href='/post/{{id}}'>{{comments.length}}
      {{format_plural 'comment' comments.length}}</a>
  </div>
</article>